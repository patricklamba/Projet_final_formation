import pandas as pd

def test_alpha_vantage():
    """Test Alpha Vantage"""
    print("ğŸ” TEST ALPHA VANTAGE")
    print("=" * 50)
    
    scraper = AlphaVantageScraper(api_key="demo")  # ClÃ© demo gratuite
    
    # Test Forex
    forex_pairs = [("EUR", "USD"), ("XAU", "USD")]
    for from_curr, to_curr in forex_pairs:
        print(f"\nğŸ“Š Test {from_curr}/{to_curr}...")
        df = scraper.fetch_forex_data(from_curr, to_curr)
        
        if df is not None and not df.empty:
            print(f"âœ… SUCCÃˆS - {len(df)} jours de donnÃ©es")
            print(df.head(3))
        else:
            print(f"âŒ Ã‰chec pour {from_curr}/{to_curr}")
    
    # Test Actions
    stocks = ["AAPL", "MSFT", "GOOGL"]
    for stock in stocks:
        print(f"\nğŸ“ˆ Test {stock}...")
        df = scraper.fetch_stock_data(stock)
        
        if df is not None and not df.empty:
            print(f"âœ… SUCCÃˆS - {len(df)} jours de donnÃ©es")
            print(df.head(3))
        else:
            print(f"âŒ Ã‰chec pour {stock}")

def test_investing_com():
    """Test Investing.com"""
    print("\nğŸ” TEST INVESTING.COM")
    print("=" * 50)
    
    scraper = InvestingScraper()
    symbols = ["XAUUSD", "EURUSD", "AAPL"]
    
    for symbol in symbols:
        print(f"\nğŸ“Š Test {symbol}...")
        df = scraper.fetch_data(symbol)
        
        if df is not None and not df.empty:
            print(f"âœ… SUCCÃˆS - {len(df)} lignes")
            print(df.head(3))
        else:
            print(f"âŒ Ã‰chec pour {symbol}")

def test_fred():
    """Test FRED"""
    print("\nğŸ” TEST FRED (Federal Reserve)")
    print("=" * 50)
    
    scraper = FREDScraper()
    series_ids = {
        "DEXUSEU": "EUR/USD",
        "GOLDAMGBD228NLBM": "Or", 
        "SP500": "S&P 500"
    }
    
    for series_id, name in series_ids.items():
        print(f"\nğŸ“Š Test {name} ({series_id})...")
        df = scraper.fetch_economic_data(series_id)
        
        if df is not None and not df.empty:
            print(f"âœ… SUCCÃˆS - {len(df)} observations")
            print(df.head(3))
        else:
            print(f"âŒ Ã‰chec pour {series_id}")

def save_sample_data():
    """Sauvegarde des donnÃ©es d'exemple pour la dÃ©mo"""
    print("\nğŸ’¾ SAUVEGARDE DONNÃ‰ES DÃ‰MO")
    print("=" * 50)
    
    # Utiliser Alpha Vantage (le plus fiable)
    av_scraper = AlphaVantageScraper(api_key="demo")
    
    # RÃ©cupÃ©rer donnÃ©es Forex
    eurusd_data = av_scraper.fetch_forex_data("EUR", "USD")
    xauusd_data = av_scraper.fetch_forex_data("XAU", "USD")
    
    if eurusd_data is not None:
        # Formater comme tes fichiers CSV existants
        eurusd_data.to_csv("data/EURUSD_scraped.csv")
        print("âœ… EURUSD_scraped.csv sauvegardÃ©")
    
    if xauusd_data is not None:
        xauusd_data.to_csv("data/XAUUSD_scraped.csv") 
        print("âœ… XAUUSD_scraped.csv sauvegardÃ©")
    
    # Si Alpha Vantage Ã©choue, crÃ©er des donnÃ©es simulÃ©es
    if eurusd_data is None:
        print("ğŸ”„ CrÃ©ation donnÃ©es simulÃ©es EURUSD...")
        dates = pd.date_range(start='2024-01-01', end='2024-10-24', freq='D')
        simulated_data = pd.DataFrame({
            'open': 1.05 + np.random.randn(len(dates)) * 0.02,
            'high': 1.07 + np.random.randn(len(dates)) * 0.02,
            'low': 1.03 + np.random.randn(len(dates)) * 0.02,
            'close': 1.05 + np.random.randn(len(dates)) * 0.02
        }, index=dates)
